<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	id          = "com.phonegap.example"
	versionCode = "10" 
	version     = "1.0.0" >
	
	<!-- versionCode is optional and Android only -->
	
	<name>Mini_Piano</name>
	
	<description>
		Uso de plugins de audio.
	</description>
	
	<preference name="phonegap-version" value="3.1.0" />
	
	<author href="https://build.phonegap.com" email="support@phonegap.com">
		Jon Secada :-)
	</author>
	
	
	<gap:plugin name="org.apache.cordova.vibration" version="0.3.0" />
	<gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />
	
	// Carga un plugin de audio y lo empaqueta en nuestra APP
	<gap:plugin name="com.rjfun.cordova.plugin.lowlatencyaudio" version="1.0" />
</widget>